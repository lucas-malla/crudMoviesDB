<%-  include('head')%>
<%-  include('header')%>
<nav class="nav-from">

  <h1> Crear peliculas</h1>
   <form action="/peliculas/crear" method="POST" class="from-1">
      <div class="from-crear">
         <div class="box">
            <label for="">Titulo</label>
            <input type="text" name="titulo">
         </div>
         
         <div class="box">
         <label for="">Premios</label>
         <input type="text" name="premios">
      </div>
      
      <div class="box">
         <label for="">Duracion</label>
         <input type="text" name="length">
      </div>
      
      <div class="box">
         <label for="">Rating</label>
         <input type="text" name="rating">
      </div>
      
      <div class="box">
         <label for="">Fecha de estreno</label>
         <input type="date" name="release_date">
      </div>
      
      <div class="box">
         <label for="">Generos</label>
         <select name="genero">
            <% for (let i = 0; i< genero.length; i++)  { %>
               <option value="<%= genero[i].id%>">
                  <%= genero[i].name %>
               </option>
               <% } %>
            </select>
            <button type="submit">Crear!!!</button>
         </div>
      </div>
   </form>
</nav>
   <%- include('footer')%>